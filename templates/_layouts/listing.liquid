---
layout: base
---

<main>
  <header class="banner banner-listing clearfix">
    <div class="container">
      <h1 class="banner-title size-xlarge">
        {{ page.title }}
      </h1>
      {% if page.intro %}
        <div class="prose page-primary">
          {{ page.intro | markdownify }}
        </div>
      {% endif %}
      {% if page.intro_link %}
        <a class="title-label no-underline" href="{{ page.intro_link.url }}">
          <span class="size-small">
            {{ page.intro_link.title }}&nbsp;&rarr;
          </span>
        </a>
      {% endif %}
    </div>
  </header>
  
  <div class="container">
    {{ content }}
  </div>
</main>
