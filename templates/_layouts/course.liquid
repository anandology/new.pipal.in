---
layout: base
---

<article class="">
  <header class="banner clearfix">
    <div class="container">
      <h1 class="banner-title">
        {{ page.title }}
      </h1>
      <div class="size-larges">
        {{ page.brief | markdownify }}
      </div>
      
      {% if page.duration or page.participants %}
        <dl class="labels">
          {% if page.duration %}
            <dt class="visuallyhidden">Suggested Duration</dt>
            <dd class="label-timer">
              {{ page.duration }}
            </dd>
          {% endif %}
          {% if page.participants %}
            <dt class="visuallyhidden">Participants</dt>
            <dd class="label-people">
              Class of {{ page.participants }}
            </dd>
          {% endif %}
        </dl>
      {% endif %}
    </div>
  </header>
  
  {% if page.video %}
    <figure class="container">
      <div class="embed-fluid">
        {{ page.video }}
      </div>
    </figure>
  {% endif %}
  
  
  {% if page.description %}
    <section class="container">
      <h2 class="section-heading size-xlarge">The Course</h2>
      <div class="prose">
        {{ page.description | markdownify }}
      </div>
    </section>
  {% endif %}
  
  {% if page.audience or page.prerequisites %}
    <section class="container">
      {% if page.audience %}
        <h2 class="section-heading size-xlarge">
          Audience
        </h2>
        <div class="prose">
          {{ page.audience | markdownify }}
        </div>
      {% endif %}
      
      {% if page.prerequisites %}
        <div class="highlight">
          <h3 class="highlight-heading size-small">
            Pre-requisites
          </h3>
          <div class="prose">
            {{ page.prerequisites | markdownify }}
          </div>
        </div>
      {% endif %}
    </section>
  {% endif %}
  
  
  {% if page.outline %}
    <section class="container">
      <h2 class="section-heading size-xlarge">
        Course Outline
      </h2>
      <div class="prose">
        {{ page.outline | markdownify }}
      </div>
    </section>
  {% endif %}
  
  
  {% if page.testimonials %}
    <section>
      <header class="container">
        <h2 class="section-heading size-xlarge">
          Testimonials
        </h2>
      </header>
      
      {% for t_slug in page.testimonials %}
        {% assign testimonial = site.testimonials | where: 'slug', t_slug | first %}
        {% assign t_id =  'testimonial-' | append: t_slug %}
        {% assign t_truncate =  testimonial.content | size %}
        {% if testimonial %}
          <aside id="{{ t_id }}">
            <blockquote class="speechbubble container {% if t_truncate > 250 %}truncate-el{% endif %}">
              {{ testimonial.content | markdownify }}
              {% if t_truncate > 250 %}
                <a
                  class="truncate-dismiss"
                  href="#{{ t_id }}">
                  <span class="truncate-button">
                    â€¦Read More
                  </span>
                </a>
              {% endif %}
            </blockquote>
            <hgroup class="container">
              <h4 class="speechbubble-attribution size-large">
                {{ testimonial.title }}
              </h4>
              <h5 class="speechbubble-credentials size-small">
                <b>{{ testimonial.org }}</b>
                {{ testimonial.designation }}
              </h5>
            </hgroup>
          </aside>
        {% endif %}
      {% endfor %}
    </section>
  {% endif %}
  
</article>
