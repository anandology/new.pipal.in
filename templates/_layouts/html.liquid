    by Miranj http://miranj.in
    
  -->
</head>
<body class="{{ layout.body_class|default:'fill-white' }}">
  <div id="page" class="{{ layout.page_class|default:'fill-offwhite container-max nopad' }} clearfix">
    
    {{ content }}
    
  </div><!-- #page -->
  
  <!--[if (!IE)|(gt IE 8)]><!-->
  <script src="{{ site.baseurl | append:'/js/libs/jquery-2.2.0.min.js' }}"></script>
  <!--<![endif]-->
  <!--[if lte IE 8]>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <![endif]-->
  <script src="{{ site.baseurl | append:'/build/app.js' }}"></script>
</body>
</html>